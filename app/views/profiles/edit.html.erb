<div class="main-new">
  <div class="main-new-left">
    <h1 class="main-new-2">
      <%= link_to "アカウント", '/users/account' %>
    </h1>
    <h1 class="main-new-2">
      <%= link_to "プロフィール", '/users/profile' %>
    </h1>
  </div>
  <div class="main-new-right">
    <div class="main-room">
      <h1 class="main-title">プロフィール</h1>
      <%= image_tag @user.user_image_url(:thumb ) if @user.user_image.present? %>
      <form>
        <%= form_with(model: @user, local: true) do |form| %>
          <div class="field">
            <%= form.label :user_image %>
            <%= form.file_field :user_image %>
          </div>

          <div class="field">
            <%= form.label :body %>
            <%= form.text_field :body %>
          </div>

          <div class="field">
            <%= form.label :username %>
            <%= form.text_field :username %>
          </div>

          <div class="actions">
            <%= form.submit %>
          </div>
        <% end %>
      </form>
    </div>
  </div>
</div>