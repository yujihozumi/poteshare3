<!DOCTYPE html>
<html>
  <head>
    <title>Poteshare2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:notice] %>
      <div class="notification is-info">
        <p class="notice"><%= notice %></p>
      </div>
    <% end %>
    
    <% if flash[:alert] %>
      <div class="notification is-danger">
        <p class="alert"><%= alert %></p>
      </div>
    <% end %>
    <header>
      <div class="header-nav-var">
        <div class="header-left">
          <%= link_to root_path, class: "header-menu" do %>
            <img alt="サイトのロゴ画像" src="https://presite-potepancamp-rails-02.herokuapp.com/assets/logo.png">
          <% end %>
          <%= search_form_for @q, url: '/rooms/search' do |f| %>
            <div class="header-sharch d-lg-inline-block">
              <%= f.search_field :address_cont, class:'form-control',placeholder: 'エリア' %>
              <i class="fas fa-map-marker-alt"></i>
            </div>
            <div class="header-sharch d-lg-inline-block">
              <%= f.search_field :room_body_cont, class:'form-control',placeholder: 'キーワード' %>
              <i class="fas fa-search"></i>
            </div>
            <%= f.submit '検索', class: "none" %>
          
          <% end %>
        </div>
    
        <% if user_signed_in? %>
          <div class="header-right">
            <div class="dropdown">
                <button class="dropdown__btn" id="dropdown__btn">
                  <div class="right-menu-icon">
                    <p class="right-menu"><%= current_user.username %></p>
                    <p class="right-menu-image">
                      <%= image_tag current_user.user_image.to_s, class: "header-icon", width: '65px' ,height: '65px' %>
                    </p>
                  </div>
                </button>
              <div class="dropdown__body">
                <ul class="dropdown__list">
                  <li class="dropdown__item">
                    <a href="#" class="dropdown__item-link"><%= link_to "ログアウト", destroy_user_session_path,  method: :delete %></a>
                  </li>
                  <li class="dropdown__item">
                    <a href="#" class="dropdown__item-link"><%= link_to "ルーム登録", new_room_path %></a>
                  </li>
                  <li class="dropdown__item">
                    <a href="#" class="dropdown__item-link"><%= link_to "予約済みルーム", reservations_path %></a>
                  </li>
                  <li class="dropdown__item">
                    <a href="#" class="dropdown__item-link"><%= link_to "登録済みルーム", rooms_path %></a>
                  </li>
                  <li class="dropdown__item">
                    <a href="#" class="dropdown__item-link"><%= link_to "設定", users_profile_path %></a>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        <% else %>
          <div class="header-right">
            <%= link_to "ログイン", new_user_session_path, class: "btn-1 header-item" %>
            <%= link_to "登録する", new_user_registration_path, class: "btn-2 header-item" %>
          </div>
        <% end %>  
      </div>
    </header>
    
    <%= yield %>
    
    <footer>
      <p>© 2020 POTEPAN.INC.</p>
    </footer>
  </body>
</html>
