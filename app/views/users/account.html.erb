<div class="main-new">
  <div class="main-new-left">
    <h1 class="main-new-2">
      <%= link_to "アカウント", '/users/account' %>
    </h1>
    <h1 class="main-new-2">
      <%= link_to "プロフィール", '/users/profile' %>
    </h1>
  </div>
  <div class="main-new-right">
    <div class="main-room">
      <h1 class="main-title">アカウント</h1>
      <form>
        <div class="room-nav">
          <p>メールアドレス</p>
          <%= current_user.email %>
          <%= current_user.username %>
          <%= current_user.body %>
          <%= image_tag @user.user_image_url(:thumb ) if @user.user_image.present? %>
        </div>
        <div class="room-nav">
          <p>パスワード</p>
          <p>*********</p>
        </div>
        <div>
          <%= link_to "編集", edit_user_registration_path, class: "btn-1 header-item" %>
        </div>
      </form>
    </div>
  </div>
</div>