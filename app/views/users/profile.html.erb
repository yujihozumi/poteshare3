<div class="main-new">
  <div class="main-new-left">
    <h1 class="main-new-2">
      <%= link_to "アカウント", '/users/account' %>
    </h1>
    <h1 class="main-new-2">
      <%= link_to "プロフィール", '/users/profile' %>
    </h1>
  </div>
  <div class="main-new-right">
    <div class="main-room">
      <h1 class="main-title">プロフィール</h1>
      
      <form>
        <%= form_with model: @user do |form| %>
          
          <div class="field">
            <%= form.label :user_image, "アイコン画像" %>
            <%= form.file_field :user_image %>
          </div>

          <div class="field">
            <%= form.label :username, "名前" %>
            <%= form.text_field :username %>
          </div>

          <div class="field">
            <%= form.label :body, "自己紹介" %>
            <%= form.text_field :body %>
          </div>

          <div class="actions">
            <%= form.submit "更新" %>
          </div>
        <% end %>
      </form>
    </div>
  </div>
</div>
