<div class="login-form">
  <div class="login-area">
    <h2 class="login-title">ログイン</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field required-b">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => 'field-form', placeholder: "メールアドレス"  %>
    </div>

    <div class="field required-b">
      <%= f.password_field :password, autocomplete: "current-password", :class => 'field-form', placeholder: "パスワード" %>
    </div>

    <div class="actions">
      <%= f.submit "ログイン" %>
    </div>
    <% end %>
    <%= link_to "新しいアカウントを作成", new_user_registration_path %>
  </div>
</div>