<div class="login-form">
  <div class="login-area">
    <h2 class="login-title">新しいアカウントを作成</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
  
      <div class="field required-b">
        <%= f.text_field :username, autofocus: true, autocomplete: "username", :class => 'field-form', placeholder: "ユーザー名" %>
      </div>

      <div class="field required-b">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => 'field-form', placeholder: "メールアドレス" %>
      </div>

      <div class="field required-b">
        <%= f.password_field :password, autocomplete: "new-password", :class => 'field-form', placeholder: "パスワード" %>
      </div>

      <div class="field required-b">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => 'field-form', placeholder: "パスワード確認"%>
      </div>

      <div class="actions">
        <%= f.submit "新しいアカウントを作成" %>
      </div>
    <% end %>
    <%= link_to "すでにアカウントをお持ちの方はログイン", new_user_session_path %>
  </div>
</div>